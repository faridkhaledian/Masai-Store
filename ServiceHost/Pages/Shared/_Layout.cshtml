	<link rel="icon" type="image/png" href="~/Theme/assets/img/favicon.png">
	<title>@ViewData["title"]|مَسای شاپ </title>
	<meta name="description" content="مَسای شاپ ">
	<meta name="author" content="Mirazimi">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
	<!-- CSS Files -->
	<link href="~/Theme/assets/fonts/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
	<link href="~/Theme/assets/fonts/font-awesome/css/solid.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/main_ui.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/icon.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/plugins/owl.carousel.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
	<link href="assets/css/nouislider.min.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/plugins/prettyphoto/css/prettyPhoto.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/main.css" rel="stylesheet" />
	<link href="~/Theme/assets/css/style.css" rel="stylesheet" />
</head>
<body class="index-page sidebar-collapse">
	<div class="top-section fullscreen-container">
		<img src="~/Theme/assets/img/banner_img/bg_top.jpg" class="h-100">
	</div>
	<!--start mobile header -->
	@await Component.InvokeAsync("Menu")
	<!-- end mobile header -->
	<div class="wrapper default">
		<!--start pc header -->
		<!--end pc header -->
		@RenderBody()

		@RenderSection("FooterSectionInIndex", required: false)

	</div>
	<script src="~/Theme/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/core/jquery.min.js"></script>
	<script src="~/Theme/assets/js/core/popper.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/bootstrap-switch.js"></script>
	<script src="~/Theme/assets/js/plugins/nouislider.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/jquery.sharrre.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/now-ui-kit.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/countdown.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/owl.carousel.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/jquery.easing.1.3.min.js" type="text/javascript"></script>
	<script src="~/Theme/assets/js/plugins/jquery.ez-plus.js" type="text/javascript"></script>

	<script src="~/Theme/assets/js/main.js" type="text/javascript"></script>
	<script src="~/Theme/assets/css/plugins/prettyphoto/js/jquery.prettyPhoto.js"></script>
	<script type="text/javascript" charset="utf-8">
		$(document).ready(function () {
					$("area[rel^='prettyPhoto']").prettyPhoto();

				$(".gallery:first a[rel^='prettyPhoto']").prettyPhoto({animation_speed:'normal',theme:'light_square',slideshow:3000, autoplay_slideshow: false});
				$(".gallery:gt(0) a[rel^='prettyPhoto']").prettyPhoto({animation_speed:'fast',slideshow:10000, hideflash: true});

			  });
	</script>
	@RenderSection("Index", required: false)
	@RenderSection("Product" , required:false)
</body>
</html>